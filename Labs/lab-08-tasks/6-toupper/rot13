%include "io.inc"
extern printf

section .data
    before_format db "before %s", 13, 10, 0
    after_format db "after %s", 13, 10, 0
    mystring db "abcdefghz", 0

section .text
global CMAIN

toupper:
    push ebp
    mov ebp, esp

    ; TODO
    mov eax, mystring
    xor ebx, ebx
    xor ecx, ecx
    loop1:
        mov bl, byte [eax + ecx]
        test bl, bl
        je out
        add bl, 13
        mov byte [eax + ecx], bl
        inc ecx
        ;inc eax
        jmp loop1
        
    leave
    ret

CMAIN:
    mov ebp, esp; for correct debugging
    push ebp
    mov ebp, esp

    push mystring
    push before_format
    call printf
    add esp, 8

    push mystring
    call toupper
    add esp, 4
out:
    push mystring
    push after_format
    call printf
    add esp, 8

    leave
    ret
